<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Add Course</title>
    <%-include('./partials/styles')%>  
</head>
<body>
    <div class="container mt-4">
        <div class="row mt-5">
        <div class="col-md-6 m-auto">
        <div class="card card-body">
        <h1 class="text-center mb-3">
                <i class="fas fa-graduation-cap"></i> Add Course</h1>
        <form method="POST">
                <%-include('./partials/messages')%>
            <div class="form-group">
              <input
                type="text"
                id="title"
                name="title"
                class="form-control"
                placeholder="Course title"
                value="<%= typeof title != 'undefined' ? title : '' %>"/>
            </div>
            <div class="form-group">

                    <input
                      type="text"
                      id="domain"
                      name="domain"
                      class="form-control"
                      placeholder="Course Domain"
                      value="<%= typeof domain != 'undefined' ? domain : '' %>"/>
            </div>
            <div class="form-group">
                    <input
                      type="text"
                      id="duration"
                      name="duration"
                      class="form-control"
                      placeholder="Course Duration (specify week/hours)"
                      value="<%= typeof duration != 'undefined' ? duration : '' %>"/>
            </div>
            <div class="form-group">
            <div class="input-group">
                    <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-rupee-sign"></i></span>
                    </div>
                    <input
                      type="text"
                      id="fees"
                      name="fees"
                      class="form-control"
                      placeholder="Course Fees"
                      value="<%= typeof fees != 'undefined' ? fees : '' %>"/>
            </div>
        </div>
            <div class="form-group">
                    <input
                      type="text"
                      id="certification"
                      name="certification"
                      class="form-control"
                      placeholder="Certification (Yes/No)"
                      value="<%= typeof certification != 'undefined' ? certification : '' %>"/>
            </div>
            <div class="form-group">
                    <textarea class="form-control" id="summary" rows="3" name="summary" placeholder="Course Summary" ></textarea>
            </div>
            <a href='/dashboard/professor/:<%=professor.id  %> 'class="btn btn-primary">Go Back</a>
            <button type="submit" class="btn btn-primary float-right">
              Submit
            </button>
          </form>
        </div>
    </div>
</div>
</div>
<%-include('./partials/scripts')%>  
</body>
</html>